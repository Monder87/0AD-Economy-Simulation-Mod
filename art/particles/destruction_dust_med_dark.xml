<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_256a.png</texture>
    <blend mode="over"/>
	
    <constant name="emissionrate" value="15.0"/>
    <uniform name="lifetime" min="15.0" max="25.0"/>

    <uniform name="position.x" min="-12.0" max="12.0"/>
    <uniform name="position.z" min="-12.0" max="12.0"/>
    <constant name="position.y" value="8.0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-1.5" max="1.0"/>
    <uniform name="velocity.y" min="2.0" max="3.0"/>
    <uniform name="velocity.z" min="-1.5" max="1.0"/>
    <uniform name="velocity.angle" min="-2.0" max="3.0"/>

    <uniform name="size" min="5.0" max="17.5"/>

    <force y="-0.25"/>
	
    <uniform name="color.r" min="0.4" max="0.8"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
