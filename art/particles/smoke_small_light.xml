<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_128d_light.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="5.0"/>
    <uniform name="lifetime" min="10.0" max="12.0"/>
	
    <constant name="position.y" value="1.5"/>

    <uniform name="angle" min="0.0" max="3.26"/>

    <uniform name="velocity.x" min="0.1" max="0.2"/>
    <uniform name="velocity.y" min="0.5" max="1.0"/>
    <uniform name="velocity.z" min="-0.05" max="0.1"/>
    <uniform name="velocity.angle" min="-0.5" max="0.5"/>

    <uniform name="size" min="1.5" max="2.0"/>

    <uniform name="color.r" min="0.5" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>
	
	<force y="-0.03"/>

</particles>
