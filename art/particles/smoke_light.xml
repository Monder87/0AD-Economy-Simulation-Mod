<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_128b.png</texture>
    <blend mode="over"/>

    <start_full/>

    <constant name="emissionrate" value="3.0"/>
    <uniform name="lifetime" min="25.0" max="35.0"/>

    <constant name="position.y" value="2.0"/>

    <uniform name="angle" min="-1.0" max="1.0"/>

    <uniform name="velocity.x" min="-0.3" max="0.3"/>
    <uniform name="velocity.y" min="1.5" max="2.0"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-1.0" max="1.0"/>

    <uniform name="size" min="1.0" max="2.5"/>
	<constant name="size.growthRate" value="0.3"/>

    <uniform name="color.r" min="0.6" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
